<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/bank_layout"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/jrmf_rp_white"
              android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/jrmf_rp_btn_height"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="@dimen/jrmf_dimen_16"
        android:paddingLeft="@dimen/jrmf_dimen_16">

        <ImageView
            android:id="@+id/iv_bank_icon"
            android:layout_width="22dip"
            android:layout_height="22dip"
            android:background="@drawable/jrmf_rp_ic_card"/>

        <TextView
            android:id="@+id/tv_bank_name"
            style="@style/text_black_16"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/jrmf_rp_btn_height"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/jrmf_dimen_8"
            android:layout_marginStart="@dimen/jrmf_dimen_8"
            tools:text="零钱支付 ( 余额 0.07 )"
            android:textColor="@color/color_434343"/>

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="@color/jrmf_rp_background"/>
</LinearLayout>
