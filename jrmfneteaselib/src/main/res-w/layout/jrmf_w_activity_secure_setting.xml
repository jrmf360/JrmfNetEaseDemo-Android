<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/jrmf_w_color_bg"
              android:fitsSystemWindows="true"
              android:orientation="vertical">

    <include
        android:id="@+id/jrmf_w_titleBar"
        layout="@layout/jrmf_w_layout_titlebar"/>

    <TextView
        android:id="@+id/tv_title"
        android:layout_below="@id/jrmf_w_titleBar"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/jrmf_dimen_16"
        android:text="@string/jrmf_w_setting_pwd"
        android:textColor="@color/color_535353"
        android:textSize="14sp"/>

    <RelativeLayout
        android:id="@+id/rl_update_pwd"
        android:layout_below="@id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/jrmf_b_item_height"
        android:background="@drawable/jrmf_w_selector_item"
        android:paddingLeft="@dimen/jrmf_dimen_16"
        android:visibility="gone">

        <ImageView
            android:id="@+id/iv_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/jrmf_dimen_16"
            android:src="@drawable/jrmf_w_arrow_right"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@id/iv_arrow"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="@string/jrmf_w_update_pwd"
            android:textColor="@color/color_959595"
            android:textSize="14sp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/jrmf_w_color_bg"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_get_pwd"
        android:layout_below="@id/rl_update_pwd"
        android:layout_width="match_parent"
        android:layout_height="@dimen/jrmf_b_item_height"
        android:background="@drawable/jrmf_w_selector_item"
        android:paddingLeft="@dimen/jrmf_dimen_16"
        android:visibility="gone"
        >

        <ImageView
            android:id="@+id/iv_get_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/jrmf_dimen_16"
            android:src="@drawable/jrmf_w_arrow_right"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@id/iv_get_arrow"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="@string/jrmf_w_get_pwd_title"
            android:textColor="@color/color_959595"
            android:textSize="14sp"/>

        <View
            android:id="@+id/line_get"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/jrmf_w_color_bg"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_set_pwd"
        android:layout_below="@id/rl_get_pwd"
        android:layout_width="match_parent"
        android:layout_height="@dimen/jrmf_b_item_height"
        android:background="@drawable/jrmf_w_selector_item"
        android:paddingLeft="@dimen/jrmf_dimen_16"
        android:visibility="gone"
        >

        <ImageView
            android:id="@+id/iv_set_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/jrmf_dimen_16"
            android:src="@drawable/jrmf_w_arrow_right"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@id/iv_set_arrow"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="@string/jrmf_w_set_pwd"
            android:textColor="@color/color_959595"
            android:textSize="14sp"/>

        <View
            android:id="@+id/line_set"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/jrmf_w_color_bg"
            android:visibility="invisible"
            />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:drawableLeft="@drawable/jrmf_b_ic_shield"
        android:drawablePadding="@dimen/jrmf_dimen_5"
        android:gravity="center_vertical"
        android:text="@string/jrmf_b_shield"
        android:textColor="@color/color_b7b7b7"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/jrmf_dimen_8"
        android:textSize="14sp"/>


</RelativeLayout>